<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:PassM" x:Class="PassM.PassMPage">
	<Grid x:Name="passCodeGrid" RowSpacing="1" ColumnSpacing="20" BackgroundColor="#404040">
		<Grid.RowDefinitions>
			<RowDefinition Height="150" />
			<RowDefinition Height="50" />
			<RowDefinition Height="50" />
			<RowDefinition Height="15" />
			<RowDefinition Height="35" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="10" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="10" />
		</Grid.ColumnDefinitions>
		<Label TextColor="#77d065" HorizontalOptions="Center" VerticalOptions="Center" FontSize="20" Text="Please Enter Your Passcode" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" />
		<Entry Text="0" IsPassword="true" Grid.Row="2" Grid.Column="1" HorizontalTextAlignment="Center" />
		<Entry Text="1" IsPassword="true" Grid.Row="2" Grid.Column="2" HorizontalTextAlignment="Center" />
		<Entry Text="2" IsPassword="true" Grid.Row="2" Grid.Column="3" HorizontalTextAlignment="Center" />
		<Entry Text="3" IsPassword="true" Grid.Row="2" Grid.Column="4" HorizontalTextAlignment="Center" />
		<Button Text="Login" TextColor="White" BackgroundColor="#77D065" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="4" Command="{Binding doLogin}"/>
	</Grid>
</ContentPage>